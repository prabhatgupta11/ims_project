<script>
    const EyeButton = () => {
        const eye = document.getElementById('eye')
        const eyeinput = document.querySelector('.pass-field')
        eye.addEventListener('click', () => {
            if (eyeinput.value !== '') {
                if (eyeinput.getAttribute('type') === 'password') {
                    eyeinput.setAttribute('type', 'text')
                    eye.childNodes[0].classList.remove("fa-eye-slash")
                    eye.childNodes[0].classList.add("fa-eye")
                    eyeinput.style.padding = "10px"
                    eyeinput.style.paddingLeft = "30px"
                }
                else {
                    eyeinput.setAttribute('type', 'password');
                    eye.childNodes[0].classList.add("fa-eye-slash")
                    eye.childNodes[0].classList.remove("fa-eye")
                }

            }

        })
    }
    EyeButton()
</script>
