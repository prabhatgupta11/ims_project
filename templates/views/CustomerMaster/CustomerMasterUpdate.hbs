<body id="body-pd">

  {{>side}}
  <div class=" m-0" style="padding: 10px;">

    <div class="col-md-12 subtitle d-flex justify-content-between align-items-center w-100"
      style="margin-top: 50px;     padding-bottom: 0px;">

      <div class="me-two d-flex justify-content-center align-items-center">

        <div class="block">
          <h4 class="flex-grow-1 listtocon " style="font-size: 24px; margin-top:0px ;  margin-bottom: 18px;">Customer
            Master Update
        </div>
        <div id="line">
          <span id="line-content"></span> <!-- Content inside the div -->
        </div>
        <div class="breadcrumdiv">
          <ul class="breadcrumb">
            <li><a href="#"> Home</a></li>
            <li><a href="#">Master</a></li>
            <li><a href="#">Customer Master Update</a></li>

          </ul>
        </div>
      </div>

      {{!-- <a href="/orderList" style="text-decoration: none;margin-right:20px ;margin-top: 25px;"> <i
          class="fa fa-xmark text-dark fa-2x"></i></a> --}}
      <a href="/customerMasterList" style="text-decoration: none;margin-right:20px ;margin-top: 25px;"> <i
          class="fa fa-xmark text-dark fa-2x"></i></a>
    </div>
  </div>
  <div>
    {{#if message}}
    <div class="alert alert-info">{{message}}</div>
    {{/if}}

    <form id="customerForm" action="/customerMasterUpdate/{{customer.rowguid}}" method="post">
      {{!-- <h1>Order Billing</h1> --}}
      <div id="formdata">
        <h4>Enter Customer Master details</h4>
        <label for="Code" class="label-block">Code:</label>

        <input type="text" id="Code" name="Code" class="sup-int" placeholder="Enter Customer Code"
          value="{{customer.Code}}">
        <div class="sup-icon">

        </div>




        <label for="Name" class="label-block">Name  <span class="text-danger">*</span></label>
        <input type="text" id="Name" name="Name" placeholder="&#128100; Enter Customer Name" value="{{customer.Name}}" required
          pattern="[A-Za-z ]+" title="Please enter only letters">

        <label for="ContactPersonName" class="label-block">Contact Person Name</label>
        <input type="text" id="ContactPersonName" name="ContactPersonName" placeholder="&#128100; Enter Contact Person Name"
          value="{{customer.ContactPersonName}}" pattern="[A-Za-z ]+" title="Please enter only letters" >




        <label for="ContactNo">Contact No 1  <span class="text-danger">*</span></label>
        <input type="number" id="ContactNo1" name="ContactNo1" placeholder="&#x260E; Enter Contact Number"
          value="{{customer.ContactNo1}}" required maxlength="10" title="Please enter a 10-digit phone number">


        <label for="ContactNo">Contact No 2 </label>
        <input type="number" id="ContactNo2" name="ContactNo2" placeholder="&#x260E; Enter Contact Number"
          value="{{customer.ContactNo2}}"  maxlength="10" title="Please enter a 10-digit phone number">

        <label for="AadharNo">Aadhar No</label>
        <input type="number" id="AadharNo" name="AadharNo" placeholder="&#9751;  Enter Aadhar Number"
          value="{{customer.AadharNo}}" minlength="10" maxlength="12" title="Please enter a 12-digit Aadhar Number">



        <label for="Pincode">Pincode</label>
        <input type="number" id="Pincode" name="Pincode" placeholder="&#9951;  Enter Pincode"
          value="{{customer.Pincode}}" maxlength="6" title="Please enter a 6-digit Pin Code Number">




        <label for="Email">Email  <span class="text-danger">*</span></label>
        <input type="email" id="Email" name="Email" placeholder="&#x2709;  Enter Email" value="{{customer.Email}}"
          required>

        <label for="GSTNo">GST No</label>
        <input type="text" id="GSTNo" name="GSTNo" placeholder="&#9951; Enter GST No." value="{{customer.GSTNo}}"
          oninput="convertToUpperCase(this)" minlength="15" maxlength="15" title="Please enter a 15-digit GST Number">



        <label for="PAN">PAN</label>
        <input type="text" id="PAN" name="PAN" placeholder="&#9751; Enter PAN" value="{{customer.PAN}}"
          oninput="convertToUpperCase(this)" minlength="10" maxlength="10" title="Please enter a 10-digit PAN Number">


        <label for="Status" class="label-block">Status</label>
        <select id="Status" name="Status">
             <option value="{{customer.Status}}">{{customer.Status}}</option>
          {{!-- <option>{{customer.Status}}</option>
          <option value="Active">Active</option>
          <option value="Inactive">Inactive</option> --}}
        </select>

        <label for="Address">Address</label>
        <div>
          <textarea id="Address" name="Address" rows="4" placeholder="Enter Address" cols="72"
            style="width: 100%;">{{customer.Address}}</textarea>
        </div>
      </div>

  </div>
  </div>

  {{!-- submit button --}}
  <button type="submit"
    style="border-radius: 10px; margin-top:30px; margin-bottom:30px; background-color:#4723d9;">Submit</button>

  </form>



  </div>




</body>

<script>

    document.addEventListener("DOMContentLoaded", function () {

        const statusSelect = document.getElementById("Status");

        let statusArray = ["Active", "Inactive"]

        statusArray.forEach((ele) => {
            const option = document.createElement("option");
            if (statusSelect.value !== ele) {
                option.value = ele;
                option.textContent = ele;
                statusSelect.appendChild(option);
            }
        })
    })
</script>