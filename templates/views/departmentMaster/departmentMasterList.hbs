    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">




    <script>
        $(document).ready(function () {
            const dataTable = $('#state_table').DataTable({
                "language": {
                    "lengthMenu": "Show _MENU_ Entries"
                },
                'processing': true,
                'serverSide': true,
                'ajax': {
                    'url': '/departmentDetailsList',
                    'type': 'GET'
                },
                'columns': [
                    { data: 'code_name' },
                    //{ data: 'code_level' },
                    { data: 'Active' },
                    {
                        data: 'rowguid',
                        'render': function (data, type, row) {
                            return "<a href='/updateDepartmentMaster/" + data + "'>EDIT</a>";
                        }
                    },
                ],
            });
        });
    </script>
