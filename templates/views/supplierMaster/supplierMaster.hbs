      <div id="formdata">
        <h4>Supplier Details</h4>
        <label for="Code" class="label-block">Code:</label>
        <div class="sup-containe" style="position: relative;">
          <input type="text" id="Code" name="Code" class="sup-int" placeholder="Enter Supplier Code" required>
          <div class="sup-icon" style="position:absolute; left:10px;top:15%">
            <i style='font-size:12px' class='fas'>&#xf121;</i>
          </div>
        </div>



        <label for="Name" class="label-block">Name:</label>
        <input type="text" id="Name" name="Name" placeholder="&#128100; Enter Name" required pattern="[A-Za-z ]+"
          title="Please enter only letters">

        <label for="ContactPersonName" class="label-block">Contact Person Name:</label>
        <input type="text" id="ContactPersonName" name="ContactPersonName" placeholder="&#128100; Enter Contact Person"
          pattern="[A-Za-z ]+" title="Please enter only letters" required>




        <label for="ContactNo">Contact No:</label>
        <input type="number" id="ContactNo" name="ContactNo" placeholder="&#x260E; Enter Contact Number" required
          maxlength="10" title="Please enter a 10-digit phone number">

        <label for="AadharNo">Aadhar No:</label>
        <input type="number" id="AadharNo" name="AadharNo" placeholder="&#9751;  Enter Aadhar Number"
          minlength="10" maxlength="12" title="Please enter a 12-digit Aadhar Number">



        <label for="Pincode">Pincode:</label>
        <input type="number" id="Pincode" name="Pincode" placeholder="&#9951;  Enter Pincode"  maxlength="6"
          title="Please enter a 6-digit Pin Code Number">




        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" placeholder="&#x2709;  Enter Email" required>

        <label for="GSTNo">GST No:</label>
        <input type="text" id="GSTNo" name="GSTNo" placeholder="&#9951; Enter GST No." 
          oninput="convertToUpperCase(this)" minlength="15" maxlength="15" title="Please enter a 15-digit GST Number">



        <label for="PAN">PAN:</label>
        <input type="text" id="PAN" name="PAN" placeholder="&#9751; Enter PAN" 
          oninput="convertToUpperCase(this)" minlength="10" maxlength="10" title="Please enter a 10-digit PAN Number">


        <label for="CreditLimit">Credit Limit:</label>
        <input type="number" id="CreditLimit" name="CreditLimit" placeholder="Enter Credit Limit" step="0.01" 
          min="0">

        <label for="CreditDays">Credit Days:</label>
        <input type="number" id="CreditDays" name="CreditDays" placeholder="Enter Credit Days"  min="0">


        <label for="Status" class="label-block">Status:</label>
        <select id="Status" name="Status">
          <option value="Active" selected>Active</option>
          <option value="Inactive">Inactive</option>
        </select>

        <label for="Address">Address:</label>
        <div>
          <textarea id="Address" name="Address" rows="4" placeholder="Enter Address" cols="72" 
            style="width: 100%;"></textarea><br><br>
        </div>
      </div>

  </div>
  </div>

  <button type="submit"
    style="border-radius: 10px; margin-top:30px; margin-bottom:30px; background-color:#4723d9;">Submit</button>

  </form>



