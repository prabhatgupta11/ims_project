<script>
  document.getElementById("supplierForm").addEventListener("submit", function () {
    //e.preventDefault();

    // Collect form data
    const formData = {
      Code: document.getElementById("Code").value,
      Name: document.getElementById("Name").value,
      ContactPersonName: document.getElementById("ContactPersonName").value,
      ContactNo: document.getElementById("ContactNo").value,
      Email: document.getElementById("Email").value,
      Address: document.getElementById("Address").value,
      Pincode: document.getElementById("Pincode").value,
      GSTNo: document.getElementById("GSTNo").value,
      PAN: document.getElementById("PAN").value,
      AadharNo: document.getElementById("AadharNo").value,
      CreditLimit: parseFloat(document.getElementById("CreditLimit").value || 0), // Set default value to 0
      CreditDays: parseInt(document.getElementById("CreditDays").value || 0), // Set default value to 0
      Status: document.getElementById("Status").value,
    };
    // Display zero if the user hasn't entered any value for Credit Limit and Credit Days
    document.getElementById("CreditLimit").value = formData.CreditLimit;
    document.getElementById("CreditDays").value = formData.CreditDays;

    // Log form data to the console (you can replace this with your backend submission logic)
    console.log("Form Data:", formData);



    fetch('/createSuplierdata', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(formData),
    })
      .then(response => response.json())
      .then(data => {
        console.log('Data sent:', data);

      })
      .catch(error => {
        console.error('Error:', error);
      });
  });

