<script>
    $(document).ready(function () {
        function setActiveLink() {
            var currentUrl = window.location.pathname;
            $('.nav_link').removeClass('active');
            $('.nav_link').each(function () {
                var linkUrl = $(this).attr('href');
                if (currentUrl === linkUrl) {
                    $(this).addClass('active');
                    var parentNavList = $(this).closest('.nav_list');
                    if (parentNavList.length > 0) {
                        parentNavList.addClass('show');
                    }
                }
            });
        }

        $('#header-toggle').click(function () {
            $('#nav-bar').toggleClass('show hide');
            $('.nav_link').toggleClass('hide');
            $('body').toggleClass('body-pd');
            $('.header.d-flex').toggleClass('body-pd');
        });

        function toggleSubmenu(submenu) {
            submenu.toggleClass('show');
            submenu.siblings('.nav_icon').find('.bx-caret-down').toggleClass('rotate');
        }

        $('#dashboard-toggle').click(function () {
            toggleSubmenu($('#dashboard-submenu'));
        });

        $('#approval-toggle').click(function () {
            toggleSubmenu($('#approval-submenu'));
        });
         $('#trans-toggle').click(function () {
            toggleSubmenu($('#trans-submenu'));
        });
        $('#report-toggle').click(function () {
            toggleSubmenu($('#report-submenu'));
        });
        setActiveLink();

        function toggleSubmenu(submenu) {
            submenu.toggleClass('show');
            submenu.siblings('.nav_icon').find('.bx-caret-down').toggleClass('rotate');
        }

        $('.nav_link order-toggle').click(function () {
            var submenu = $('#dashboard-submenu');
            $('.nav_link').removeClass('active');
            toggleSubmenu(submenu);
            setActiveLink();
        });

        var storedActiveLink = localStorage.getItem('activeLink');
        if (storedActiveLink) {
            $('a[href="' + storedActiveLink + '"]').addClass('active');
            var parentNavList = $('a[href="' + storedActiveLink + '"]').closest('.nav_list');
            if (parentNavList.length > 0) {
                parentNavList.addClass('show');
            }
        }
    });

</script>


